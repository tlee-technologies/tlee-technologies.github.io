<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Product Listing</title>
  <link rel="stylesheet" href="/public/css/admin.css">
  <script defer src="/public/js/admin-product.js"></script>
</head>
<body>
  <nav class="admin-nav">
    <ul>
      <li><a href="/admin-upload">Bulk Upload</a></li>
      <li><a href="/admin-products">Product Listing</a></li>
      <li><a href="/">Sign Out</a></li>
    </ul>
  </nav>
  <main>
    <h1>Admin Product Listing</h1>
    <div class="admin-controls">
      <input type="text" placeholder="Search products...">
      <button type="button">Search</button>
      <button type="button" onclick="location.href='/product-edit?id=new'">Add New Product</button>
    </div>
    <table>
      <thead>
        <tr>
          <th>Product ID</th>
          <th>Name</th>
          <th>Description</th>
          <th>Category</th>
          <th>Image Path</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.category %></td>
            <td><%= product.image %></td>
            <td><%= product.price %></td>
            <td>
              <button onclick="location.href='/product-edit?id=<%= product.id %>'">Edit</button>
              <button onclick="deleteProduct('<%= product.id %>')">Delete</button>
              <button onclick="archiveProduct('<%= product.id %>')">Archive</button>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </main>
</body>
</html>