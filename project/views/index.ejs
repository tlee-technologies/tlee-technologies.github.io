<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>U.G. Café - Home</title>
  <link rel="stylesheet" href="/css/home.css" />
</head>
<body>
  <%- include('nav') %>

  <header class="hero-section">
    <div class="content">
      <a href="/"><img src="/images/ugCafeLogo2.png" class="logo" alt="U.G. Café Logo 2" /></a>
      <p class="sub-heading">Brewing Connections, One Cup at a Time</p>
    </div>
  </header>

  <section class="product">
    <h2 class="product-category">Hot Drinks</h2>
    <div class="product-container">
      <% hotDrinks.forEach(product => { %>
        <div class="product-card">
          <div class="product-image">
            <form action="/product" method="GET">
              <input type="hidden" name="id" value="<%= product.id %>" />
              <button class="image-button" type="submit">
                <img src="<%= product.image %>" class="product-thumb" alt="<%= product.name %>">
              </button>
            </form>
            <form action="/product" method="GET">
              <input type="hidden" name="id" value="<%= product.id %>" />
              <button class="card-button" type="submit">View Details</button>
            </form>
          </div>
          <div class="product-info">
            <h2 class="product-title"><%= product.name %></h2>
            <p class="product-description"><%= product.description %></p>
            <p class="product-price">$<%= product.price %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <section class="product">
    <h2 class="product-category">Cold Drinks</h2>
    <div class="product-container">
      <% coldDrinks.forEach(product => { %>
        <div class="product-card">
          <div class="product-image">
            <form action="/product" method="GET">
              <input type="hidden" name="id" value="<%= product.id %>" />
              <button class="image-button" type="submit">
                <img src="<%= product.image %>" class="product-thumb" alt="<%= product.name %>">
              </button>
            </form>
            <form action="/product" method="GET">
              <input type="hidden" name="id" value="<%= product.id %>" />
              <button class="card-button" type="submit">View Details</button>
            </form>
          </div>
          <div class="product-info">
            <h2 class="product-title"><%= product.name %></h2>
            <p class="product-description"><%= product.description %></p>
            <p class="product-price">$<%= product.price %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <%- include('footer') %>
</body>
</html>